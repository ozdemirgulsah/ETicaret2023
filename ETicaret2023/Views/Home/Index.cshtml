@using ETicaret2023.Models;
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET MVC ETİCARET PROJESİ</h1>
 
</div>

<div class="row">
    <div class="col-md-3">
        <h2>Kategoriler</h2>
        <ul style="list-style:none;">
           @foreach (Kategoriler item in (List<Kategoriler>)ViewBag.Kategoriler)
           {
            <li>
           @Html.ActionLink(item.KategoriAdi,"Kategori",new {id=item.KategoriID})
            </li>
           }
        </ul>
        
    </div>
    <div class="col-md-9">
        <h2>Ürünler</h2>
        <div class="row">
            @foreach (Urunler item in (List<Urunler>)ViewBag.Urunler)
            {
                <div class="col-md-4" style="border:2px solid; height:240px; width:280px; ">
                    <h5>@item.UrunAdi</h5>
                    <img src="/image/@(item.UrunID+".jpg")" style=" width:45%;" />

                    <p>
                        <a href="/Home/Urun/@item.UrunID" class="btn btn-default">Ürün Detay &raquo;</a>
                        <span style="float:right; color:red; font-size:15px;">@item.UrunFiyati TL</span>
                    </p>



                </div>  
            }


        </div>
    </div>

</div>